<resources>

    <!-- Base application theme. -->

    <style name="Theme.myPoli.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/md_white</item>
    </style>

    <style name="Theme.myPoli.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.myPoli.Red" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/md_red_300</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.myPoli.Pink" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_pink_500</item>
        <item name="colorPrimaryDark">@color/md_pink_700</item>
        <item name="colorPrimaryLight">@color/md_pink_300</item>
        <item name="colorAccent">@color/md_deep_purple_A200</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_pink_500</item>
    </style>

    <style name="Theme.myPoli.Blue" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>
        <item name="colorPrimaryLight">@color/md_blue_300</item>
        <item name="colorAccent">@color/md_red_A400</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_blue_500</item>
    </style>

    <style name="Theme.myPoli.Green" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorPrimaryLight">@color/md_green_300</item>
        <item name="colorAccent">@color/md_pink_A400</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_green_500</item>
    </style>

    <style name="Theme.myPoli.Purple" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryDark">@color/md_purple_700</item>
        <item name="colorPrimaryLight">@color/md_purple_300</item>
        <item name="colorAccent">@color/md_green_A700</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_purple_500</item>
    </style>

    <style name="Theme.myPoli.Orange" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/md_deep_orange_700</item>
        <item name="colorPrimaryLight">@color/md_deep_orange_300</item>
        <item name="colorAccent">@color/md_indigo_A200</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_deep_orange_500</item>
    </style>

    <style name="Theme.myPoli.Blue_Grey" parent="Theme.myPoli.Base">
        <item name="colorPrimary">@color/md_blue_grey_500</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_700</item>
        <item name="colorPrimaryLight">@color/md_blue_grey_300</item>
        <item name="colorAccent">@color/md_deep_orange_A400</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:navigationBarColor">@color/md_blue_grey_500</item>
    </style>

    <style name="Theme.myPoli.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_white</item>
        <item name="colorPrimaryDark">@color/md_grey_300</item>
        <item name="colorPrimaryLight">@color/md_grey_100</item>
        <item name="colorAccent">@color/md_red_A400</item>
        <item name="alertDialogTheme">@style/Theme.myPoli.AlertDialog</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/md_white</item>
    </style>

    <style name="Theme.myPoli.DialogActivity" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/ScaleInDialogAnimation</item>
    </style>

    <style name="Theme.myPoli.SignIn" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.myPoli.ToolbarImage" parent="Theme.myPoli.Red">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChatMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.myPoli.EditText" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/md_light_text_87</item>
    </style>

    <style name="CategoryIndicator">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/ic_context_indicator</item>
    </style>

    <style name="DialogContainer">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Theme.myPoli.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.myPoli.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SlideInDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top_long</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_long</item>
    </style>

    <style name="ScaleInDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="AgendaCalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="WhiteEditTextTheme" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_light_text_87</item>
        <item name="colorControlNormal">@color/md_light_text_87</item>
        <item name="colorControlActivated">@color/md_light_text_87</item>
        <item name="android:textColorPrimary">@color/md_light_text_87</item>
    </style>

    <style name="SubQuestWhiteEditText">
        <item name="android:theme">@style/WhiteEditTextTheme</item>
    </style>

    <style name="ChallengeWhiteEditTextTheme" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_light_text_87</item>
        <item name="colorControlNormal">@color/md_light_text_87</item>
        <item name="colorControlActivated">@color/md_light_text_87</item>
        <item name="android:textColorPrimary">@color/md_light_text_87</item>
    </style>

    <style name="ChallengeWhiteEditText">
        <item name="android:theme">@style/ChallengeWhiteEditTextTheme</item>
    </style>

    <style name="ChallengeTextInputLayout" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">@color/md_light_text_54</item>
        <item name="colorAccent">@color/md_light_text_87</item>
        <item name="colorControlNormal">@color/md_light_text_87</item>
        <item name="colorControlActivated">@color/md_light_text_87</item>
    </style>

    <style name="TextAppearance.myPoli.Challenge.TextInputLayout" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/md_light_text_54</item>
    </style>

    <style name="AppInviteListItem" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Calendar" />

    <style name="Calendar.Quest" />

    <style name="Calendar.Quest.Name" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Calendar.Quest.StartTime" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Calendar.Quest.StartTime.Drag">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Calendar.Quest.EndTime">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Calendar.Quest.EndTime.Drag">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Calendar.Quest.Name.Drag">
        <item name="android:padding">0dp</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textColor">@color/md_light_text_87</item>
    </style>

    <style name="LearningCheckbox">
        <item name="android:colorAccent">@color/md_blue_500</item>
        <item name="android:colorControlNormal">@color/md_blue_500</item>
        <item name="android:colorControlHighlight">@color/md_blue_500</item>
        <item name="android:colorControlActivated">@color/md_blue_500</item>
    </style>

    <style name="WellnessCheckbox">
        <item name="android:colorAccent">@color/md_green_500</item>
        <item name="android:colorControlNormal">@color/md_green_500</item>
        <item name="android:colorControlHighlight">@color/md_green_500</item>
        <item name="android:colorControlActivated">@color/md_green_500</item>
    </style>

    <style name="PersonalCheckbox">
        <item name="android:colorAccent">@color/md_orange_500</item>
        <item name="android:colorControlNormal">@color/md_orange_500</item>
        <item name="android:colorControlHighlight">@color/md_orange_500</item>
        <item name="android:colorControlActivated">@color/md_orange_500</item>
    </style>

    <style name="WorkCheckbox">
        <item name="android:colorAccent">@color/md_red_500</item>
        <item name="android:colorControlNormal">@color/md_red_500</item>
        <item name="android:colorControlHighlight">@color/md_red_500</item>
        <item name="android:colorControlActivated">@color/md_red_500</item>
    </style>

    <style name="FunCheckbox">
        <item name="android:colorAccent">@color/md_purple_500</item>
        <item name="android:colorControlNormal">@color/md_purple_500</item>
        <item name="android:colorControlHighlight">@color/md_purple_500</item>
        <item name="android:colorControlActivated">@color/md_purple_500</item>
    </style>

    <style name="ChoresCheckbox">
        <item name="android:colorAccent">@color/md_blue_grey_500</item>
        <item name="android:colorControlNormal">@color/md_blue_grey_500</item>
        <item name="android:colorControlHighlight">@color/md_blue_grey_500</item>
        <item name="android:colorControlActivated">@color/md_blue_grey_500</item>
    </style>
</resources>
